@model CRUD.Models.Secao

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Conteudo" class="control-label"></label>
        <input asp-for="Conteudo" class="form-control" />
        <span asp-validation-for="Conteudo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrabalhoId" class="control-label"></label>
        <select asp-for="TrabalhoId" class="form-control" asp-items="ViewBag.TrabalhoId"></select>
        <span asp-validation-for="TrabalhoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
<div>
    <a href="/Secao" class="btn btn-secondary">Voltar</a>
</div>

